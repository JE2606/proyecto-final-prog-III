<div style="height: 50px;"></div>
<div class="container mt-5">
    <h1 class="text-center mb-4">Add New Publisher</h1>
    <hr>
    <form action="/publishers/add" method="POST" class="border rounded p-4 shadow-sm">
        <div class="form-group">
            <label for="name">Name</label>
            <input type="text" class="form-control" id="name" name="name" required placeholder="Penguin Random House">
        </div>
        <div class="form-group">
            <label for="telephone">Telephone</label>
            <input type="text" class="form-control" id="telephone" name="telephone" required placeholder="+1 212-373-8600">
        </div>
        <div class="form-group">
            <label for="country">Country</label>
            <input type="text" class="form-control" id="country" name="country" required placeholder="United State">
        </div>
        <div class="text-right">
            <a href="/publishers" class="btn btn-secondary">Back</a>
            <button type="submit" class="btn btn-danger">Create</button>
        </div>
    </form>
</div>
<div style="height: 50px;"></div>

