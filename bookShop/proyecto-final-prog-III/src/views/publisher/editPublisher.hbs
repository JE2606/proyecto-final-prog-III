<div style="height: 50px;"></div>
<div class="container mt-5">
    <h1 class="text-center mb-4">Edit Publisher</h1>
    <hr>
    <form action="/publishers/edit/{{ publisher.id }}" method="POST" class="border rounded p-4 shadow-sm">
        <div class="form-group">
            <label for="name">Name</label>
            <input type="text" class="form-control" id="name" name="name" required value="{{ publisher.name }}">
        </div>
        <div class="form-group">
            <label for="telephone">Telephone</label>
            <input type="text" class="form-control" id="telephone" name="telephone" required value="{{ publisher.telephone }}">
        </div>
        <div class="form-group">
            <label for="country">Country</label>
            <input type="text" class="form-control" id="country" name="country" required value="{{ publisher.country }}">
        </div>
        <div class="text-right">
            <a href="/publishers" class="btn btn-secondary">Cancel</a>
            <button type="submit" class="btn btn-danger">Update</button>
        </div>
    </form>
</div>
<div style="height: 50px;"></div>
