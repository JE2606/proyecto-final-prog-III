<!-- views/addAuthor.hbs -->

<div style="height: 50px;"></div>
<div class="container mt-5">
    <h1 class="text-center mb-4">Add New Author</h1>
    <hr>
    <form action="/authors/add" method="POST" class="border rounded p-4 shadow-sm">
        <div class="form-group">
            <label for="name">Name</label>
            <input type="text" class="form-control" id="name" name="name" required placeholder="John Doe">
        </div>
        <div class="form-group">
            <label for="email">Email</label>
            <input type="email" class="form-control" id="email" name="email" required placeholder="john.doe@example.com">
        </div>
        <div class="text-right">
            <a href="/authors" class="btn btn-secondary">Cancel</a>
            <button type="submit" class="btn btn-danger">Create</button>
        </div>
    </form>
</div>
<div style="height: 50px;"></div>
