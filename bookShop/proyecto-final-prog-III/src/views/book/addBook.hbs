<div style="height: 50px;"></div>
<div class="container mt-5">
    <h1 class="text-center mb-4">Add New Book</h1>
    <hr>
    <form action="/books/add" method="post" enctype="multipart/form-data" class="border rounded p-4 shadow-sm">
        <div class="mb-3">
            <label for="title" class="form-label">Title</label>
            <input type="text" class="form-control" id="title" name="title" required placeholder="The Great Gatsby">
        </div>
        <div class="mb-3">
            <label for="publicationYear" class="form-label">Publication Year</label>
            <input type="number" class="form-control" id="publicationYear" name="publicationYear" required placeholder="1925">
        </div>
        <div class="mb-3">
            <label for="image" class="form-label">Book Cover Image</label>
            <div class="input-group">
                <input type="file" class="btn" id="image" name="image" accept="image/*" required>
                
            </div>
        </div>
        <div class="mb-3">
            <label for="categoryId" class="form-label">Category</label>
            <select class="form-control" id="categoryId" name="categoryId" required>
                <option value="">Select Category</option>
                {{#each categories}}
                <option value="{{this.id}}">{{this.name}}</option>
                {{/each}}
            </select>
        </div>
        <div class="mb-3">
            <label for="authorId" class="form-label">Author</label>
            <select class="form-control" id="authorId" name="authorId" required>
                <option value="">Select Author</option>
                {{#each authors}}
                <option value="{{this.id}}">{{this.name}}</option>
                {{/each}}
            </select>
        </div>
        <div class="mb-3">
            <label for="publisherId" class="form-label">Publisher</label>
            <select class="form-control" id="publisherId" name="publisherId" required>
                <option value="">Select Publisher</option>
                {{#each publishers}}
                <option value="{{this.id}}">{{this.name}}</option>
                {{/each}}
            </select>
        </div>
        <div class="text-end">
            <a href="/books" class="btn btn-secondary me-3">Back</a>
            <button type="submit" class="btn btn-primary">Create Book</button>
        </div>
    </form>
</div>
<div style="height: 50px;"></div>
