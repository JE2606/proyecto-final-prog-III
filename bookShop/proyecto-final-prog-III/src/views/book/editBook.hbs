<div style="height: 50px;"></div>
<div class="container mt-5">
    <h1 class="text-center mb-4">Edit Book</h1>
    <hr>
    <form action="/books/edit/{{book.id}}" method="POST" enctype="multipart/form-data" class="border rounded p-4 shadow-sm">
        <div class="mb-3">
            <label for="title" class="form-label">Title</label>
            <input type="text" class="form-control" id="title" name="title" value="{{book.title}}" required>
        </div>
        <div class="mb-3">
            <label for="publicationYear" class="form-label">Publication Year</label>
            <input type="number" class="form-control" id="publicationYear" name="publicationYear" value="{{book.publicationYear}}" required>
        </div>
        <div class="mb-3">
            <label for="image" class="form-label">Book Cover Image</label>
            <div class="input-group">
                <input type="file" class="btn" id="image" name="image" accept="image/*">
            </div>
        </div>
        <div class="mb-3">
            <label for="category" class="form-label">Category</label>
            <select class="form-control" id="category" name="categoryId" required>
                {{#each categories}}
                    <option value="{{this.id}}" {{#ifCond this.id '===' ../book.categoryId}}selected{{/ifCond}}>{{this.name}}</option>
                {{/each}}
            </select>
        </div>
        <div class="mb-3">
            <label for="author" class="form-label">Author</label>
            <select class="form-control" id="author" name="authorId" required>
                {{#each authors}}
                    <option value="{{this.id}}" {{#ifCond this.id '===' ../book.authorId}}selected{{/ifCond}}>{{this.name}}</option>
                {{/each}}
            </select>
        </div>
        <div class="mb-3">
            <label for="publisher" class="form-label">Publisher</label>
            <select class="form-control" id="publisher" name="publisherId" required>
                {{#each publishers}}
                    <option value="{{this.id}}" {{#ifCond this.id '===' ../book.publisherId}}selected{{/ifCond}}>{{this.name}}</option>
                {{/each}}
            </select>
        </div>
        <div class="text-end">
            <a href="/books" class="btn btn-secondary me-3">Back</a>
            <button type="submit" class="btn btn-primary">Save Changes</button>
        </div>
    </form>
</div>
<div style="height: 50px;"></div>
